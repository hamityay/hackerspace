- content_for :toolbar do
  = link_to edit_user_profile_path, class: 'btn btn-default' do
    %i.icon-pencil
    = t('action_button.new')
.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: "Profile")

  .panel-body
    = show_for @profile do |s|
      = s.attribute :name
      = s.attribute :surname
      = s.attribute :email
      = s.attribute :twitter
      = s.attribute :bio
      = s.attribute :created_at
      = s.attribute :updated_at
      <br>
    = link_to 'Edit Profile', edit_user_profile_path, class: 'btn btn-default'