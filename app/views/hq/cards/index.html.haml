- content_for :toolbar do
  = link_to new_hq_card_path, class: 'btn btn-default' do
    %i.icon-plus
    = t('action_button.new', resource_name: Card.model_name.human)

.panel.panel-default.grid
  .panel-heading
    %i.fa.fa-table.icon-large
    = t('activerecord.models.cards')
    .panel-tools
      .btn-group
        %a.btn{href: hq_cards_path, data: {toggle: 'toolbar-tooltip'}, title: t('view.reload')}
          %i.fa.fa-refresh
      .badge= @cards.count
  =blankable(@cards)
  .panel-footer
    .pagination.pagination-sm
      = will_paginate @cards, renderer: BootstrapPagination::Rails, bootstrap: 3